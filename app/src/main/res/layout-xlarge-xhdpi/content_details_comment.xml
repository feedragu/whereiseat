<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ActivityResources.DetailsComment"
    tools:showIn="@layout/activity_details_comment"
    android:id="@+id/comment_layout"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <ImageView
        android:layout_width="426dp"
        android:layout_height="334dp"
        android:id="@+id/imageIm"
        android:layout_gravity="left|top"
        android:layout_marginTop="65dp" />

    <Button
        android:layout_width="199dp"
        android:layout_height="85dp"
        android:text="Visualizza Commenti"
        android:id="@+id/btnPad"
        android:onClick="moveFrag"
        android:layout_gravity="right|top"
        android:layout_marginTop="65dp"
        android:background="@drawable/buttonshape" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="371dp"
        android:layout_height="151dp"
        android:layout_gravity="center_vertical|left"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtName"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:foregroundGravity="left"
            android:gravity="left"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtAddr"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:foregroundGravity="left"
            android:gravity="left"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtPlace"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="10dp"
            android:foregroundGravity="left"
            android:gravity="left"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="570dp"
        android:layout_height="397dp"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="140dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="OPENING AND CLOSING HOURS"
            android:id="@+id/textView2"
            android:textStyle="bold"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtM"
            android:textSize="22dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtTu"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtW"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtTh"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtF"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtS"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtSu"
            android:textSize="22dp" />
    </LinearLayout>

    <Button
        android:layout_width="199dp"
        android:layout_height="85dp"
        android:text="Vota questo ristorante"
        android:id="@+id/btnRate"
        android:onClick="moveFrag"
        android:layout_gravity="right|top"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="180dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rBar"
        android:layout_gravity="right|top"
        android:numStars="5"
        android:visibility="visible"
        android:layout_marginTop="300dp" />


</FrameLayout>
