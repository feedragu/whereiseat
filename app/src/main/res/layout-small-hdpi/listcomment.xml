<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.03"
        android:background="#f2f2f1"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/button_text"
            android:layout_weight="0.88">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView4"
                android:layout_gravity="right|center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="210dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp" />

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="12dp"
                android:id="@+id/view3"
                app:cardCornerRadius="50dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="2.0"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageProf"
                    android:layout_below="@+id/toolbar"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
            </android.support.v7.widget.CardView>

            <EditText
                android:layout_width="529dp"
                android:layout_height="180dp"
                android:id="@+id/txtC"
                android:background="@drawable/border"
                android:editable="false"
                android:textColor="#000000"
                android:layout_gravity="right|bottom"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textAlignment="inherit"
                android:gravity="top"
                android:paddingTop="5dp"
                style="@style/text"
                android:textSize="22dp"
                android:layout_alignTop="@+id/scrollView4"
                android:layout_toEndOf="@+id/view3"
                android:fontFamily="sans-serif-thin"
                android:layout_alignLeft="@+id/txtUs"
                android:layout_alignStart="@+id/txtUs" />

            <TextView
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txtUs"
                android:layout_gravity="center_horizontal|top"
                android:textColor="#000000"
                android:gravity="left"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:fontFamily="sans-serif-light"
                android:layout_alignTop="@+id/view3"
                android:layout_toRightOf="@+id/view3"
                android:layout_toEndOf="@+id/view3" />

            <RatingBar
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:layout_below="@+id/txtC"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
