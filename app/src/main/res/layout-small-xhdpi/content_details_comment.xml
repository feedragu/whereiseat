<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ActivityResources.DetailsComment"
    tools:showIn="@layout/activity_details_comment"
    android:id="@+id/comment_layout"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageIm"
        android:layout_gravity="left|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:id="@+id/linearLayout4"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageIm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtName"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="2dp"
            android:foregroundGravity="left"
            android:gravity="left"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtAddr"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="2dp"
            android:foregroundGravity="left"
            android:gravity="left"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtPlace"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="2dp"
            android:foregroundGravity="left"
            android:gravity="left"
            android:textSize="18sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/webSite"
            android:autoLink="web"
            android:textSize="18sp"
            android:layout_marginLeft="2dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="480dp"
        android:layout_height="250dp"
        android:layout_gravity="left|bottom"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignLeft="@+id/imageIm"
        android:layout_alignStart="@+id/imageIm"
        android:layout_toStartOf="@+id/imgGallery"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_alignRight="@+id/btnPad"
        android:layout_alignEnd="@+id/btnPad">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ORARI DI APERTURA E CHIUSURA"
            android:id="@+id/textView2"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_below="@+id/imageIm"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtM"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtTu"
            android:textSize="18dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtW"
            android:textSize="18dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtTh"
            android:textSize="18dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtF"
            android:textSize="18dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtS"
            android:textSize="18dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtSu"
            android:textSize="18dp"
            android:textColor="#000000" />

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FOTO GALLERY"
        android:id="@+id/textView5"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignLeft="@+id/btnRate"
        android:layout_alignStart="@+id/btnRate" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgGallery"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Menu"
        android:id="@+id/button"
        android:padding="12dp"
        android:layout_gravity="right|top"
        android:textSize="16dp"
        style="@style/button_text"
        android:background="@drawable/red_button"
        android:layout_below="@+id/btnMap"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Voto"
        android:id="@+id/btnRate"
        android:padding="12dp"
        android:layout_gravity="right|top"
        android:textSize="16dp"
        style="@style/button_text"
        android:background="@drawable/red_button"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Visualizza Commenti"
        android:id="@+id/btnPad"
        android:padding="12dp"
        android:layout_gravity="right|top"
        android:textSize="16dp"
        android:onClick="moveFrag"
        style="@style/button_text"
        android:background="@drawable/red_button"
        android:layout_below="@+id/imgGallery"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Portami la"
        android:id="@+id/btnMap"
        android:padding="12dp"
        android:layout_gravity="right|top"
        android:textSize="16dp"
        android:onClick="startMap"
        style="@style/button_text"
        android:background="@drawable/red_button"
        android:layout_below="@+id/btnPad"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rBar"
        android:layout_below="@+id/btnRate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:numStars="5"
        android:stepSize="0.1" />


</RelativeLayout>
</ScrollView>